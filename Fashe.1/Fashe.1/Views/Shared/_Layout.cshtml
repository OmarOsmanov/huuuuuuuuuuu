@model VmLayout

@inject IHttpContextAccessor _httpContext
@{

    string cart = _httpContext.HttpContext.Request.Cookies["cart"];
    List<string> cartList = new List<string>();
    if (!string.IsNullOrEmpty(cart))
    {
        cartList = cart.Split("-").ToList();
    }
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/imagehover.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="images/favicon.webp" type="image/x-icon">
    <title>About</title>
</head>

<body class="animated fadeIn delay-0s">
    <header>
        <div class="container-fluid topheader">

            <div class="row topheader" id="topheader">
                <div class="col-4 topbar-social">
                    <ul>
                        <li>
                            <a href="#" class="topbar-social-item fa fa-facebook"></a>
                        </li>
                        <li>
                            <a href="#" class="topbar-social-item fa fa-instagram"></a>
                        </li>
                        <li>
                            <a href="#" class="topbar-social-item fa fa-pinterest-p"></a>
                        </li>
                        <li>
                            <a href="#" class="topbar-social-item fa fa-snapchat-ghost"></a>
                        </li>
                        <li>
                            <a href="#" class="topbar-social-item fa fa-youtube-play"></a>
                        </li>
                    </ul>
                </div>
                <div class="col-4">
                    <span>Free shipping for standard order over $100</span>
                </div>
                <div class="col-4">
                    <div>
                        <span>fashe@example.com</span>
                        <select name="" id="">
                            <option value="USD">USD</option>
                            <option value="EUR">EUR</option>
                        </select>
                    </div>

                </div>
            </div>

            <div class="row header shadow-sm pb-3">
                <div class="col-6 col-md-6 col-lg-2 col-sm-6">
                    <img src="@*~/Uploads/@Model.Setting.Logo*@" alt="">
                </div>
                <div class="col-8 col-md-10 col-lg-8">
                    <nav>
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Homepage V2 </a></li>
                            <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                            <li><a asp-controller="Cart" asp-action="Index">Features</a></li>
                            <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                            <li><a asp-controller="About" asp-action="Index">About</a></li>
                            <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-6 col-md-6 col-lg-2 col-sm-6">
                    <a><img src="images/icon-header-01.png" alt="" style="cursor: pointer;"></a>
                    <span class="line"></span>
                    <div class="bucket-icon-div position-relative">
                        <a id="bucket-icon"><img src="images/icon-header-02.png" alt="" style="cursor: pointer;"></a>
                        <span class="numOfitems position-absolute" id="numOfitems">0</span>
                    </div>
                    <!-- hamburger menu uchun -->
                    <span class="header-icons-noti"></span>
                </div>

            </div>
            <div class="row shop-bucket animated fadeInDown delay-0s" id="bucket-menu">
                <div id="bucket">
                    <div class="col-lg-12 col-sm-12 text-center mb-3">
                        <span>
                            Total:
                        </span>
                        <span id=" ">
                            0.00
                        </span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-dark" id="view-cart">
                                <a asp-controller="Shop" asp-action="Cart">content (@cartList.Count)</a>
                            </button>
                        </div>
                        <div class="col-6">
                            <button class="btn btn-dark">
                                check out
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody();

    <footer>
        <div class="container-fluid mt-5 pt-5">
            <div class="wrap">
                <div class="row">
                    <div class="col-lg-4 col-sm-12 mt-3">
                        <h5>Get in Touch</h5>
                        <p>@*@Model.Setting.Info*@</p>
                        <div class="col-4 topbar-social">
                            @*@foreach (var item in Model.Sosials)
                                {
                                    <a href="#" class="@item.Icon"></a>
                                }*@


                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12 ">
                        <div class="row">
                            <div class="col-lg-4 mt-3">
                                <ul>
                                    <h5>Categories</h5>
                                    <li> <a href="#">Men</a></li>
                                    <li> <a href="#">Women</a></li>
                                    <li> <a href="#">Dresses</a></li>
                                    <li> <a href="#">Sunglasses</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-4 mt-3">
                                <ul>
                                    <h5>Links</h5>
                                    <li> <a href="#">Search</a></li>
                                    <li> <a href="#">About Us</a></li>
                                    <li> <a href="#">Contact Us</a></li>
                                    <li> <a href="#">Returns</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-4 mt-3">
                                <ul>
                                    <h5>Help</h5>
                                    <li> <a href="#">Track Order</a></li>
                                    <li> <a href="#">Returns</a></li>
                                    <li> <a href="#">Shipping</a></li>
                                    <li> <a href="#">FAQs</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-12 mt-3">
                        <h5>NewSletter</h5>
                        <input type="email" placeholder="email@example.com" class="form-control">
                        <button class="btn btn-dark">Subscribe</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 footer-end mt-5">
                        <img src="images/paypal.png" alt="">
                        <img src="images/visa.png" alt="">
                        <img src="images/mastercard.png" alt="">
                        <img src="images/express.png" alt="">
                        <img src="images/discover.png" alt="">
                        <p>Copyright © 2017 Colorlib. All rights reserved.</p>
                    </div>
                </div>
            </div>

        </div>
    </footer>

    <script src="js/main.js"></script>
    <script src="js/script.js"></script>
</body>

</html>